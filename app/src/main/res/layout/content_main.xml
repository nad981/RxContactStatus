        android:layout_centerHorizontal="true"
        android:contentDescription="@string/action_settings" />

    <ImageButton
        android:id="@+id/ContButon"
        android:background="@drawable/conticon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:longClickable="true"
        android:onClick="onclick1"
        android:layout_below="@+id/WelcomeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:contentDescription="@string/title_activity_contact" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Welcome"
        android:id="@+id/WelcomeText"
        android:layout_marginTop="34dp"
        android:textColor="#e69090"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:selectAllOnFocus="true"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/Write"
        android:id="@+id/Button"
        android:layout_alignBottom="@+id/settings"
        android:layout_alignBaseline="@+id/settings"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onclick3" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ContButon"
        android:id="@+id/container">

