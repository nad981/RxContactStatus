<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:id="@+id/relativeLayout2">

        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:paddingLeft="@dimen/pad_10dp"
            android:id="@+id/etxtFilter"
            android:layout_weight="1"
            android:textSize="33sp"
            android:hint="Name"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imgFilter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:background="@drawable/edittext_rectangle"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgFilter"
            android:src="@drawable/ic_search"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/etxtFilter" />

    </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgProfilePhoto"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/img_male"
            android:scaleType="fitXY"
            android:layout_alignLeft="@+id/txtServerAddress"
            android:layout_alignStart="@+id/txtServerAddress"
            android:layout_above="@+id/txtPublicKey"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/relativeLayout2" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="@dimen/fivefive"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_delete"
            android:visibility="visible"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btnSave"
            android:layout_alignTop="@+id/imgDelete"
            android:layout_alignBottom="@+id/imgDelete"
            android:layout_toRightOf="@+id/imgDelete"
            android:textSize="28sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/green_button" />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_rectangle"
        android:ems="10"
        android:hint="Public Key"
        android:id="@+id/txtPublicKey"
        android:textSize="33sp"
        android:gravity="center"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    />


</RelativeLayout>